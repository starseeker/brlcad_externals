# If we're not on Windows, set some environment variables
if (NOT WIN32)
  set(ENV{LD_LIBRARY_PATH} "@CMAKE_BUNDLE_INSTALL_PREFIX@/@LIB_DIR@")
  set(ENV{CPPFLAGS} "-I@CMAKE_BUNDLE_INSTALL_PREFIX@/@INCLUDE_DIR@")
  set(ENV{LDFLAGS} "-L@CMAKE_BUNDLE_INSTALL_PREFIX@/@LIB_DIR@")
endif (NOT WIN32)

if (WIN32)
  execute_process(COMMAND "@VCVARS_BAT@" && bootstrap.bat --prefix=@CMAKE_BUNDLE_INSTALL_PREFIX@ WORKING_DIRECTORY @BOOST_SOURCE_DIR@)
else (WIN32)
  execute_process(COMMAND ./bootstrap.sh --prefix=@CMAKE_BUNDLE_INSTALL_PREFIX@ WORKING_DIRECTORY @BOOST_SOURCE_DIR@ OUTPUT_VARIABLE MSG ERROR_VARIABLE MSG)
endif (WIN32)

